termtype=xterm-256color

alpha=224
depth=32

# 結合文字列を処理する。
use_combinig=false

# 結合文字列を動的に合成する。
use_dynamic_comb=true

# フォント関連
fontsize=16

# フォントのレンダリングエンジンはxft
type_engine=cairo

# unicodeの記号の文字幅を2文字にする。
col_size_of_width_a=1
col_size_of_width=1

line_space=0

# 可変長の列幅を利用する。
use_variable_column_width=false

# 複数幅の文字を利用する。
use_multi_column_char=true

# 貼り付けられた文字列の変換時にunicodeを介して変換する
receive_string_via_ucs=true

# アンチエイリアシングフォントを使用する。
use_anti_alias=true
# アンチエイリアス(xft)時、jixs0208のunicode変換時にcp932の変換テーブルを使う。
use_cp932_ucs_for_xft=true

# 全ての文字をunicodeフォントだけを使って表示する。
only_use_unicode_font=true
# not_use_unicode_font=false

# スクロールバーは利用しない。
use_scrollbar=false

tabsize=4

logsize=500

mod_meta_mode = esc

#####Recognize ANSI color change escape sequences.
use_ansi_colors=true

fg_color=#839496
bg_color=#002b36
cursor_bg_color=#586e75
cursor_fg_color=#93a1a1
bd_color=#9f87ff
it_color=#171422
