# -*- mode: sh -*-
#
export GOPATH=$HOME/develop/ghq
export GHQ_ROOT=$GOPATH/src

export LANG=ja_JP.UTF-8
export LC_ALL=ja_JP.UTF-8
export XMODIFIERS="@im=fcitx"
export COLORTERM=rxvt-256unicode

# use openjdk in gentoo
if [ -d "/usr/lib64/openjdk-11" ]; then
    export JAVA_HOME=/usr/lib64/openjdk-11
elif [ -x $(which java-config) ]; then
    export JAVA_HOME=`java-config -O`
fi

export PATH=$JAVA_HOME/bin:$HOME/.npm/bin:$HOME/.nodebrew/current/bin:$GOPATH/bin:$HOME/.roswell/bin:$HOME/.cargo/bin:/opt/VirtualBox:$HOME/bin:$PATH
