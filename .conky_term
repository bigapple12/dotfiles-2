## General
alignment top_left
background no
disable_auto_reload true
update_interval 2.0
total_run_times 0
double_buffer yes
text_buffer_size 8192
own_window yes
own_window_type override
own_window_transparent yes
own_window_argb_value 0

## Behavior
format_human_readable yes
short_units no
show_graph_range no
show_graph_scale no
draw_graph_borders no
cpu_avg_samples 2
net_avg_samples 2
top_cpu_separate false
top_name_width 25
no_buffers no

## Text/Font Settings
use_xft yes
override_utf8_locale yes
xftfont VL Gothic:size=10
#xftalpha 1.0
#uppercase no

## Border/Shade/Outline
draw_borders no
draw_shades no
default_shade_color black
draw_outline yes
default_outline_color 40b0ff

## Color
default_color white
# Title
color1 ff3000
# Bar
color2 2d56ab
# Top Title
color3 ff3074
# Top 1
color4 fbff8a
#color5
#color6
#color7
#color8
#color9

## Template
# CPU Graph <num> <height> <width>
template0 ${cpugraph cpu\1 \2,\3 40b0ff 2d56ab  100 -t}${offset -\3} CPU\1: ${cpu cpu\1}%
# CPU Top <num> <indent1> <indent2> <indent3> <indent4>
template1 ${top name \1}${goto \2}${top pid \1}${goto \3}${top cpu \1}${goto \4}${top mem \1}
# Memory Top <num> <indent1> <indent2> <indent3> <indent4>
template2 ${top_mem name \1}${goto \2}${top_mem pid \1}${goto \3}${top_mem mem_vsize \1}${goto \4}${top_mem mem_res \1}${goto \5}${top_mem mem \1}
# Disk I/O Graph <device> <type> <height> <width>
template3 ${diskiograph_\2 \1 \3,\4 40b0ff 2d56ab 10000 -t}${offset -\4} /dev/\1 \2: ${diskio_\2 \1}
# Disk I/O Top <num> <indent1> <indent2> <indent3> <indent4> template4 ${top_io name \1}${goto \2}${top_io pid \1}${goto \3}${top_io io_read \1}${goto \4}${top_io io_write \1}${goto \5}${top_io io_perc \1}
# Network Graph <ethN> <type> <height> <width>
template5 ${\2speedgraph \1 \3,\4 40b0ff 2d56ab 1000 -t}${offset -\4} \1 \2: ${\2speed \1}
# Disk Bar <name> <path>
template6 \1 ${goto 55} ${fs_used \2}/${fs_size \2} ${goto 170} ${color2} ${fs_bar 6 \2}
# Load Average Graph <height> <width>
template7 ${loadgraph \1,\2 40b0ff 2d56ab 4 -t}${offset -\2} Load Average: ${loadavg}${alignr}Processes: ${running_processes}/${processes}
# Top 5 <template num> <indent1> <indent2> <indent3> <indent4>
template8 ${color4} ${template\1 1 \2 \3 \4 \5}\n${color} ${template\1 2 \2 \3 \4 \5}\n${color} ${template\1 3 \2 \3 \4 \5}\n${color} ${template\1 4 \2 \3 \4 \5}\n${color} ${template\1 5 \2 \3 \4 \5}

TEXT
${color1}System ${hr}
${color } ${nodename} - ${sysname} ${kernel} on ${machine}
${color } Uptime: ${uptime}
${color1}${voffset 3}Processor ${hr}
${color } CPU ${freq_g 0}GHz: ${color2}${cpubar cpu0}
${color } CPU ${freq_g 1}GHz: ${color2}${cpubar cpu1}
${color } CPU ${freq_g 2}GHz: ${color2}${cpubar cpu2}
${color } CPU ${freq_g 3}GHz: ${color2}${cpubar cpu3}
${color } CPU ${freq_g 4}GHz: ${color2}${cpubar cpu4}
${color } CPU ${freq_g 5}GHz: ${color2}${cpubar cpu5}
${color } CPU ${freq_g 6}GHz: ${color2}${cpubar cpu6}
${color } CPU ${freq_g 7}GHz: ${color2}${cpubar cpu7}
${color } CPU ${freq_g 8}GHz: ${color2}${cpubar cpu8}
${color }${template0 0 20 325}${voffset -5}
${color }${template7 20 325}${voffset -5}
${color3} Command${goto 150}PID${goto 210}%CPU${goto 260}%MEM${goto 300}
${color }${template8 1 150 200 250}
${color1}${voffset 3}Memory ${hr}
${color } RAM: ${mem}/${memmax} - ${memperc}%${goto 200}${color2}${membar}
${color } Swap: ${swap}/${swapmax} - ${swapperc}%${goto 200}${color2}${swapbar}
${color } B/C: ${buffers}/${cached}
${color3} Command${goto 150}PID${goto 200}VIRT${goto 250}RES${goto 300}%MEM
${color }${template8 2 150 200 250 300}
${color1}${voffset 3}Disk${hr}
${color }${goto 10}${template3 sda Read 20 166}${goto 175}${template3 sda Write 20 166}${voffset -5}
${color } ${template6 / /}
${color } ${template6 /tmp /tmp}
${color1}${voffset 3}Network ${hr}
${if_up eth0}${color }${template5 eth0 Down 20 166}${goto 175}${template5 eth0 Up 20 166}${voffset -5}${endif}${if_up eth1}
${color }${template5 eth1 Down 20 166}${goto 175}${template5 eth1 Up 20 166}${voffset -5}${endif}
${color1}${voffset -5}Calendar ${hr}
${color }${execi 600 gcal --type=standard --highlighting='<:>:[:]' -s Su . | grep -v "^ *$" | colrm 23 26 | colrm 45 48}
${color1}${voffset -5}Weather ${hr}
${color }${execi 3600 ~/bin/weather}

